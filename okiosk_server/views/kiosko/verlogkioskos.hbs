{{> nav_verkioskos}}
<div class="container p-12">
    <div class="row">
        <dir class="pull-right">
            <button id="btnLog" class="btn btn-warning" onclick="eliminarLog()" role="button">Borrar Log</button> 
        </dir>
        {{#if success }}
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <div class="alert alert-success" role="alert">
                            {{success}}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">  
                    <table id="logs" class="table table-striped table-bordered" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="dt-log-fecha">Fecha</th>
                                    <th scope="col" class="dt-log-equipo" >Nombre Equipo</th>
                                    <th scope="col">Serie</th>
                                    <th scope="col">Ip</th>
                                    <th scope="col">Suceso</th>
                                </tr>
                            </thead>                  
                            <tbody>
                                {{#each logKioskos}}
                                <tr class="dt-log-font">
                                    <td >{{fechaCorta fecha}}</td>
                                    <td >{{nombre}}</td>
                                    <td>{{serie}}</td>
                                    <td>{{ip}}</td>
                                    <td >{{descripcion}}</td>
                                    <!--
                                    <td>
                                        <div class="btn-group mx-auto" role="group" aria-label="Basic example">
                                            
                                            <a href='/kiosko/editarkiosko/{{idequipo}}' class='btn btn-info btn-sm' title="Editar Kiosko"><i class="fa fa-pencil"></i></a>
                                            <a onclick="eliminarEquipo({{idequipo}},'{{nombre}}')" class='btn btn-danger btn-sm' title="Eliminar Kiosko"><i class="fa fa-trash"></i></a>
                                            
                                        </div>
                                    </td>
                                    -->
                                </tr>
                                {{else}}
                                <div class="col-md-12 mx-auto">
                                    <div class="alert alert-danger" role="alert">
                                        NO HAY LOGS EN EL SISTEMA.                                        
                                    </div>
                                </div>
                                {{/each}}
                            </tbody>
                    </table>       
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    alert("Hola");
    var table = $('#logs').DataTable({
        "columnDefs": [ { type: 'date', 'targets': [0] } ],
        "order":[[0,"desc"]],
    });
 //        "order":[[0,"desc"]]
    new $.fn.dataTable.Buttons( table, {
        buttons: [
             'excel', 'pdf'
        ]
    } );
    
    table.buttons().container().appendTo( $('.col-sm-6:eq(0)', table.table().container() ) );
</script>

<script lang="Javascript">
    //por José Luis Olivares, 18/09/2019
    function eliminarLog(){
        //validar borrado de kiosco
        var msg="Se eliminarán todos los logs almacenados<br> <strong>¿Desea confirmar la acción?</strong>";
        url="/logs/borrarlog/"; //url de borrado
        //usando jquery-confirm
        $.confirm({
            title: 'Eliminar Logs',
            content: msg,
            closeIcon: true,
            buttons: {
                cancelar:{
                    btnClass: 'btn-blue',
                    keys:['esc'],
                },
                Eliminar: {
                    btnClass: 'btn-danger',
                    action: function () {
                        window.location.href=url;                 
                    }
                },    
            }
        });
    }
</script>