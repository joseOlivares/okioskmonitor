{{> nav_agregarusuario}}
<div class="container p-6 mx-auto">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/usuario/agrearUsuario" method="post"  >
                        <div class="form-group">
                            <label for="nombre_usuario">Nombre</label>
                            <input type="text" class="form-control" name="nombre_usuario" placeholder="Nombre de usuario" autofocus required="true" autocomplete="off" >
                        </div>
                        <div class="form-group">
                            <label for="idPerfil">Perfil</label>
                            <select class="form-control" name="idPerfil">
                                <!-- "../" se usa para acceder fuera del scope del #EACH -->
                            {{#each tblPerfil}}
                                <option value="{{idperfil}}">{{nombre}}</option>
                            {{/each}}    
                            </select> 
                        </div>                         
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" class="form-control" title="No puede repetirse el correo, con el de un usuario ya registrado en el sistema." name="email" aria-describedby="emailHelp" placeholder="ejemplo@correo.com" required="true" autocomplete="off">
                            <span class="label label-warning">No puede repetirse el correo, con el de un usuario ya registrado en el sistema.</span>
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" pattern=".{6,12}" title="6 a 12 caracteres requeridos" class="form-control" name="password" placeholder="Contraseña" required="true" autocomplete="off">
                            <span class="label label-info">6 a 12 caracteres requeridos</span>
                        </div> 
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Crear Usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>